<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mobile_navigation"
        app:startDestination="@+id/navigation_films_list">

    <fragment
            android:id="@+id/navigation_films_list"
            android:name="com.example.filmfragments.FilmsListFragment"
            android:label="Films list"
            tools:layout="@layout/fragment_films_list" />

    <fragment
            android:id="@+id/navigation_genres_list"
            android:name="com.example.filmfragments.GenresListFragment"
            android:label="Genres list"
            tools:layout="@layout/fragment_genres_list" />

    <fragment
            android:id="@+id/navigation_add_film"
            android:name="com.example.filmfragments.AddFilmFragment"
            android:label="Add film"
            tools:layout="@layout/fragment_add_film" />

    <fragment
            android:id="@+id/navigation_add_genre"
            android:name="com.example.filmfragments.AddGenreFragment"
            android:label="Add genre"
            tools:layout="@layout/fragment_add_genre" />
</navigation>